@model SubirFicheros.Models.Ficheros

@{
    ViewBag.Title = "Subida";
}

<h2>Subida</h2>


@using (Html.BeginForm("Subida","Home",FormMethod.Post,
    new {enctype="multipart/form-data"})) 
{
    @Html.AntiForgeryToken()
    <input type="hidden" name="tipo" value="@ViewBag.almacen"/>

    <div class="form-horizontal">
        <h4>Ficheros</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.nombre, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.tipoFichero, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("tipoFichero",String.Empty)
                @Html.ValidationMessageFor(model => model.tipoFichero, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label" for="fichero">Fichero a subir</label>
            <div class="col-sm-10">
                <input type="file" class="form-control" name="fichero" 
                       id="fichero" >
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
